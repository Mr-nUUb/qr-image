{
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "module": "commonjs",
    "target": "es2020",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "strict": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "jsx": "react"
  }
}
